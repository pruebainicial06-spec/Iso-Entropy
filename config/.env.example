# Configuración de Entorno - ISO-ENTROPÍA

# API Key de Google Gemini 3 Flash
# Obtén tu clave en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-api-key-here

# Modo de ejecución
# true: Simula comportamiento sin llamar API
# false: Utiliza API real de Gemini
ISO_MOCK_MODE=false

# Iteraciones máximas en auditoría
ISO_MAX_ITERATIONS=10

# Puerto Streamlit (default: 8501)
STREAMLIT_PORT=8501

# Nivel de verbosidad
# DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
